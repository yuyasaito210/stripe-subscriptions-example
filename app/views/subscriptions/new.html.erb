<% current_user_id = 1 %>
<% current_user_email = "test@mailinator.com" %>

<span class="test">
  <em>During testing use the credit card:</em> 
    <code>5555555555554444</code><em>, set expiry into the future and use any other deets you like.
  </em>
</span>

<div id="new_subscription">
  <%= form_for @subscription, html: {id: 'payment-form', class: 'form-horizontal'} do |f| %>
    <%= f.hidden_field :payment_plan_id, value: 'basic' %>
    <%= f.hidden_field :user_id, value: current_user_id %>
    <%= hidden_field_tag :email, current_user_email %>

    <div class="container">
    	<fieldset>
        <legend>Sign up now</legend>

        <div class="row">
          <div class="field">
              <%= label_tag :email %>
              <br>
              <%= text_field_tag :email, nil, name: nil %>
          </div>
        </div>
        <div id="secure" class="container">
          <div class="row">
              <span id="shield">
              </span>
            <span id="lock">
                <h3>Secure credit card payment</h3>
                This is a secure 128-bit SSL encrypted payment.
            </span>
            <div class="field">
                <%= hidden_field_tag :payment_plan, nil, name: nil %>
            </div>
          </div>
          <div class="row">
            <div id="card-number" class="field">
              <%= label_tag :card_number, "Credit Card Number " %>
              <br>
              <%= text_field_tag :card_number, nil, name: nil,autocomplete: 'off' %>
              <span id="card-type">
              </span>
            </div>
          </div>
          
         <!--    <div class="form-cards cards_select">
              <input id="credit_card_type" class="js-card-select-type-field" type="hidden" value="" name="credit_card_type"></input>
                <ul class="cards billing-credit-cards js-card-select-cards">
                  <li>
                    <span class="card visa js-card" data-name="visa" title="Visa">
                      Visa
                    </span>
             </div> -->
          <div class="row">
            <div class="field">
                <%= label_tag :card_code, "Security Code on Card (CVV)" %>
                <br>
                <%= text_field_tag :card_code, nil, name: nil %>
            </div>
          </div>
          <div class="row">
            <div class="field">
              <%= label_tag :card_month, "Card Expiration" %>
              <br>
              <%= select_month nil, {add_month_numbers_true: true}, {name: nil, id: "card_month"}%>
              <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"}%>
            </div>
          </div>
        </div>
      <div class="row">
        <div class="alert alert-error payment-errors"></div>
        <!-- <%= f.hidden_field :payment_plan_id %> -->
      </div>
    </fieldset>
    </div>

    <div class="control-group">
      <div class="controls">
        <input id="savebutton" type="submit" class="btn btn-primary submit-button">
        	Save Billing Information
        </input>
      </div>
    </div>
  <% end %>
</div>